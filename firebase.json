{
  "database": {
    "rules": "database.rules.json"
  },
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "headers": [
      { "source":"/service-worker.js", 
        "headers": [
          {"key": "Cache-Control", "value": "no-cache"},
          {"key": "X-XSS-Protection", "value": "1; mode=block"}
        ]
      }
    ],
    "rewrites": [ {
      "source": "**",
      "destination": "/index.html"
    } ]
  }
}
